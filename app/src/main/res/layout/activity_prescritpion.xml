<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/prescription_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/bar"
        layout="@layout/tool_bar" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="00:00"
        android:textColor="#ffffff"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bluetooth"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <!-- A -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A:"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tv_name1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="A药品"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tv_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="数量"
                android:inputType="number"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </LinearLayout>
        <!-- B -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B:"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tv_name2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="B药品"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tv_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="数量"
                android:inputType="number"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </LinearLayout>
        <!-- C -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C:"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tv_name3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="C药品"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tv_count3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="数量"
                android:inputType="number"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </LinearLayout>
        <!-- D -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D:"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tv_name4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="D药品"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tv_count4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="数量"
                android:inputType="number"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </LinearLayout>
        <!-- E -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E:"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tv_name5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="E药品"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/tv_count5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="数量"
                android:inputType="number"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/send_prescription" />

    </RelativeLayout>

</RelativeLayout>
